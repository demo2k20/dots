## --- Important Tools --- ##
# Terminal
super + Return
    $TERMINAL

# Floating terminal
# super + shift + Return
#     $TERMINAL -t floatterm

# Dropdown terminal
super + shift + Return
    tdrop --name="spterm" -n 1 -w "" -h "" -x "" -y "" $TERMINAL -t "spterm"

# Program launcher
super + d
    dmenu_run -i -p "Run"


## --- Multimedia keys --- ##
# Brightness controls
XF86MonBrightnessUp
    brightness up
XF86MonBrightnessDown
    brightness down

super + alt + {button4,Up}
    brightness up
super + alt + {button5,Down}
    brightness down

# Audio controls
XF86AudioRaiseVolume
    volume up
XF86AudioLowerVolume
    volume down
XF86AudioMute
    volume toggle

super + shift + {button4,Up}
    volume up
super + shift + {button5,Down}
    volume down

# Audio controls (mpc)
super + control + shift + Up
    mpc volume +5
super + control + shift + Down
    mpc volume -5

# Media controls
XF86AudioPlay
    playerctl play-pause
XF86XK_AudioNext
    playerctl next
XF86XK_AudioPrev
    playerctl previous

# Media controls (mpc)
super + XF86AudioPlay
    mpc toggle
super + XF86XK_AudioNext
    mpc next
super + XF86XK_AudioPrev
    mpc prev

# Touchpad Toggle
XF86TouchpadToggle
    toggletouchpad

# Lockscreen
XF86ScreenSaver
    lockscreen


## --- Print screen functionality --- ##
# Print screen(s)
Print
    maim -o -u /tmp/printscreen.png; xclip -selection clipboard -t image/png < /tmp/printscreen.png

# Snip screen
shift + Print
    maim -o -u -s /tmp/snippet.png; xclip -selection clipboard -t image/png < /tmp/snippet.png

# Snip active window
alt + Print
    maim -o -u -i $(xdotool getactivewindow) > /tmp/windowsnippet.png | xclip -selection clipboard -t image/png


## --- Basic programs --- ##
# Browser
super + w
    $BROWSER

# Display manager
super + p
    arandr

# Bluetooth manager
super + shift + b
    $TERMINAL -e bluetoothctl

# Network manager
super + shift + n
    dnm

# Password manager
super + shift + Insert
    passmenu -i -l 30 -p "Password store"    

# Task manager
control + shift + Escape
    $TERMINAL -e htop

# File manager
super + r
    $TERMINAL -e $FILE

# Audio mixer
super + shift + p
    $TERMINAL -e pulsemixer

# Music player
super + m
    $TERMINAL -t ncmpcpp -e ncmpcpp -q

# Email client
super + n
    $TERMINAL -t neomutt -e neomutt

# Calculator
super + c
#   $TERMINAL -t floatterm -e bc -l -q
    tdrop --name="bcterm" -n 2 -w "" -h "" -x "" -y "" $TERMINAL -t "bcterm" -e bc -l -q

# VM manager
super + v
    virt-manager


