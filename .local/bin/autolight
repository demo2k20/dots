#!/bin/sh

# Check the current time
TIME=$(date +%H)

# Store commands in functions
NIGHTLIGHT_ON() { \
    redshift -PO 3200 > /dev/null
	}
NIGHTLIGHT_OFF() { \
    redshift -x > /dev/null
	}

# Turn on nightlight from 7pm until 7am, else turn it off
[ "$TIME" -ge "19" -o "$TIME" -le "7" ] && NIGHTLIGHT_ON || NIGHTLIGHT_OFF
