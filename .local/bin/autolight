#!/bin/sh

# Check the current time
TIME=$(date +%H)

# Store commands in functions
NIGHTLIGHT_ON() { \
    redshift -PO 3200 > /dev/null
#   notify-send " Autolight" "Nightlight: ON"
	}
NIGHTLIGHT_OFF() { \
    redshift -x > /dev/null
#   notify-send " Autolight" "Nightlight: OFF"
	}

# Turn on nightlight from 8pm until 7am, else turn it off
[ "$TIME" -ge "20" -o "$TIME" -le "7" ] && NIGHTLIGHT_ON || NIGHTLIGHT_OFF
