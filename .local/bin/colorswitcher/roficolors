#!/bin/sh

bg=$(xrdb -query | grep "*.background" | awk '{print $2}')
fg=$(xrdb -query | grep "*.foreground" | awk '{print $2}')
selbg=$(xrdb -query | grep "*.selbackground" | awk '{print $2}')
selfg=$(xrdb -query | grep "*.selforeground" | awk '{print $2}')

file="$HOME/.config/rofi/globals.rasi"

sed -i \
    "2s/:.*/: "$bg";/ ; \
    3s/:.*/: "$fg";/ ; \
    4s/:.*/: "$fg";/ ; \
    9s/:.*/: "$selfg";/ ; \
    10s/:.*/: "$selbg";/" \
    "$file"
