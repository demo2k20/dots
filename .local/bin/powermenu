#!/bin/sh

# Prompt the user for a choice
CHOICE=$(printf 'Lock\nLogout\nShutdown\nReboot\nSuspend\nHibernate' | dmenu -i -p "Powermenu")

# Action based on choice
case "$CHOICE" in
    Lock)
        loginctl lock-session ;;
    Logout)
        i3-msg exit || kill -TERM "$(pidof dwm)" || killall xinit ;;
    Shutdown)
        systemctl poweroff ;;
    Reboot)
        systemctl reboot ;;
    Suspend)
        systemctl suspend ;;
    Hibernate)
        systemctl hibernate ;;
    *)
        exit
esac
