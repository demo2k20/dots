#!/bin/sh

# Prompt user for choice
CHOICE=$(printf 'Lock\nLogout\nShutdown\nReboot\nSuspend\nHibernate' | dmenu -i -p "Powermenu")

# Take action based on user choice
case "$CHOICE" in
    Lock)
        loginctl lock-session ;;
    Logout)
        i3-msg exit || killall xinit ;;
    Shutdown)
        systemctl poweroff ;;
    Reboot)
        systemctl reboot ;;
    Suspend)
        systemctl suspend ;;
    Hibernate)
        systemctl hibernate ;;
    *)
        exit
esac
