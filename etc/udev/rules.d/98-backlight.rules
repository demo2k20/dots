# Adjust screen brightness according to power state and update brightness block
# 1st rule for when on AC
ACTION=="change", SUBSYSTEM=="power_supply", ATTR{type}=="Mains", ATTR{online}=="1", ENV{DISPLAY}=":0", ENV{XAUTHORITY}="/home/roland/.config/x11/xauthority", RUN+="/bin/sh -c 'xbacklight -set 60 && pkill -SIGRTMIN+4 i3blocks || pkill -SIGRTMIN+4 dwmblocks'"

# 2nd rule for when on battery
ACTION=="change", SUBSYSTEM=="power_supply", ATTR{type}=="Mains", ATTR{online}=="0", ENV{DISPLAY}=":0", ENV{XAUTHORITY}="/home/roland/.config/x11/xauthority", RUN+="/bin/sh -c 'xbacklight -set 20 && pkill -SIGRTMIN+4 i3blocks || pkill -SIGRTMIN+4 dwmblocks'"
